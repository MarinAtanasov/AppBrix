<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Contains tests for creating AppBrix applications</Description>
    <Copyright>Copyright 2015</Copyright>
    <AssemblyTitle>AppBrix.Tests</AssemblyTitle>
    <VersionPrefix>0.8.0</VersionPrefix>
    <Authors>Marin Atanasov</Authors>
